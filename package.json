{
  "private": true,
  "name": "decomoji-conjugator",
  "version": "1.5.0",
  "description": "デコモジ活用作成支援ツール",
  "main": "index.html",
  "author": "oti",
  "license": "MIT",
  "scripts": {
    "start": "parcel src/index.pug --open --out-dir .cache",
    "build": "parcel build src/index.pug --no-source-maps --public-url ./",
    "prepare": "husky install",
    "update:decomoji": "rm -rf node_modules/decomoji && npm i -d decomoji/decomoji"
  },
  "dependencies": {
    "core-js": "^3.15.2"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.16.1",
    "autoprefixer": "^9.8.6",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "decomoji": "github:decomoji/decomoji",
    "husky": "^7.0.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "pug": "^3.0.2",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    }
  }
}
