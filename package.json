{
  "private": true,
  "name": "decomoji-conjugator",
  "version": "2.1.0",
  "description": "デコモジ活用作成支援ツール",
  "author": "oti",
  "license": "MIT",
  "scripts": {
    "build": "parcel build src/index.pug --no-optimize --no-source-maps --public-url ./",
    "lint-css": "stylelint dist/*.css",
    "lint-html": "markuplint dist/*.html --ruleset ./markuplintrc",
    "prepare": "husky install && node netlify-workaround.mjs",
    "prettier": "prettier --write .",
    "start": "parcel src/index.pug --open",
    "test": "npm run lint-css & npm run lint-html & npm run validate-html",
    "update:decomoji": "rm -rf node_modules/decomoji && npm i -d decomoji/decomoji",
    "validate-html": "html-validator --file=dist/index.html --verbose"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@parcel/transformer-pug": "^2.4.0",
    "@prettier/plugin-pug": "^1.20.0",
    "autoprefixer": "^10.4.4",
    "decomoji": "github:decomoji/decomoji",
    "html-validator-cli": "^2.0.0",
    "husky": "^7.0.4",
    "markuplint": "^2.5.0",
    "parcel": "^2.4.0",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "pug": "^3.0.2",
    "stylelint": "^14.6.1",
    "stylelint-config-recommended": "^7.0.0",
    "typescript": "^4.6.3"
  }
}
